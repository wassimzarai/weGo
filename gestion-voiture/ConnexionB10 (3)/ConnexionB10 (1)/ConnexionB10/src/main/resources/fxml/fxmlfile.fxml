<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Pos?>

<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Controllers.ViewVoitureController"
            prefWidth="800" prefHeight="600">

    <!-- SplitPane for two sections: Voiture UI (Left) and Conducteur UI (Right) -->
    <SplitPane fx:id="splitPane" orientation="HORIZONTAL"
               AnchorPane.topAnchor="20" AnchorPane.bottomAnchor="20"
               AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" style="-fx-background-color: #f5f5f5;">
        <items>
            <!-- Left Section: Voiture UI -->
            <VBox fx:id="voitureContainer" alignment="CENTER" spacing="25" prefWidth="350"
                  style="-fx-background-color: #d0f0c0; -fx-padding: 20; -fx-border-radius: 15; -fx-border-color: #4caf50; -fx-effect: dropshadow(gaussian, #4caf50, 10, 0.5, 0, 0);">
                <Label text="Gestion des Voitures" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #388e3c;"/>
                <TextField fx:id="searchField" promptText="Tapez pour filtrer..." style="-fx-font-size: 14px; -fx-background-color: #a7d8b8; -fx-text-fill: #388e3c; -fx-border-radius: 5; -fx-padding: 10px 15px;"/>

                <TableView fx:id="voitureTable" style="-fx-background-color: #ffffff; -fx-border-color: #4caf50; -fx-border-radius: 10; -fx-padding: 10px; -fx-effect: dropshadow(gaussian, #81c784, 8, 0.5, 0, 0);">
                    <columns>
                        <TableColumn fx:id="idColumn" text="ID"/>
                        <TableColumn fx:id="marqueColumn" text="Marque"/>
                        <TableColumn fx:id="modeleColumn" text="ModÃ¨le"/>
                        <TableColumn fx:id="typeColumn" text="Type"/>
                        <TableColumn fx:id="matriculeColumn" text="Matricule"/>
                        <TableColumn fx:id="actionsColumn" text="Actions"/>
                    </columns>
                </TableView>

                <!-- Buttons with updated styles -->
                <Button fx:id="addButton" text="Ajouter une Voiture" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, #388e3c, 10, 0.5, 0, 0); -fx-padding: 10px 20px;"/>
                <Button fx:id="goToConducteurButton" text="Conducteur Page" onAction="#navigateToConducteur" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, #388e3c, 10, 0.5, 0, 0); -fx-padding: 10px 20px;"/>

                <!-- New Button for Statistics -->
                <Button fx:id="goToStatisticsButton" text="Voir Statistiques" onAction="#navigateToStatistics" style="-fx-background-color: #66bb6a; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, #388e3c, 10, 0.5, 0, 0); -fx-padding: 10px 20px;"/>

                <!-- New Button "Voir Voiture" -->
                <Button text="Voir Voiture" onAction="#handleVoirVoitureAction" style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10; -fx-effect: dropshadow(gaussian, #388e3c, 10, 0.5, 0, 0); -fx-padding: 10px 20px;"/>

                <!-- New Button "Modifier" -->
                <Button fx:id="modifierButton" text="Modifier" onAction="#handleModifierButton"
                        style="-fx-background-color: #00c9a7; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10; -fx-padding: 10px 20px;"/>

                <!-- New Button "Exporter PDF" -->
                <Button fx:id="exportPdfButton" text="Exporter PDF" onAction="#handleExportPdf" style="-fx-background-color: #1976d2; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 10; -fx-padding: 10px 20px;"/>
            </VBox>

            <!-- Right Section: Conducteur UI -->
            <VBox fx:id="conducteurContainer" alignment="CENTER" spacing="25" prefWidth="450" style="-fx-background-color: #d0f0c0; -fx-border-radius: 15; -fx-border-color: #4caf50; -fx-effect: dropshadow(gaussian, #4caf50, 10, 0.5, 0, 0);">
                <Label text="Conducteur Management" style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #388e3c;"/>
                <Label text="Select or manage Conducteurs here." style="-fx-font-size: 16px; -fx-text-fill: #777777;"/>
            </VBox>

        </items>
    </SplitPane>
</AnchorPane>
